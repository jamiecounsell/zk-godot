script/source = "@tool
class_name MenuItem
extends MarginContainer

var button = null

# Text
@export var text : String :
	set(new_text):
		text = new_text
		if button:
			button.set_text(text)

# Action
@export var action : Resource :
	set(new_action):
		action = new_action
		if button:
			button.set_action(action)
		notify_property_list_changed()

func _ready():
	button = $Button
	button.text =(text)
	button.set_action(action)

func _get_property_list() -> Array:
	var properties = []
	if action:
		properties = action.get_action_property_list()
	return properties if properties else []
"

